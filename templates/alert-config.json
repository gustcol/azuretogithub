{
  "enabled": true,
  "channels": {
    "email": {
      "enabled": false,
      "smtpServer": "smtp.example.com",
      "smtpPort": 587,
      "useSsl": true,
      "from": "migration-alerts@example.com",
      "to": [
        "admin@example.com",
        "devops-team@example.com"
      ],
      "username": "",
      "password": ""
    },
    "slack": {
      "enabled": false,
      "webhookUrl": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
      "channel": "#migration-alerts",
      "username": "Migration Bot",
      "iconEmoji": ":robot_face:"
    },
    "teams": {
      "enabled": false,
      "webhookUrl": "https://outlook.office.com/webhook/YOUR/WEBHOOK/URL"
    },
    "console": {
      "enabled": true
    }
  },
  "thresholds": {
    "failureRatePercent": 10,
    "stalledMinutes": 60,
    "healthCheckFailures": 3,
    "rateLimitWarningPercent": 80,
    "diskSpaceWarningPercent": 90
  },
  "alertCooldownMinutes": 15,
  "suppressDuplicates": true,
  "duplicateWindowMinutes": 30,
  "severityFilter": [
    "Critical",
    "High",
    "Medium",
    "Low",
    "Info"
  ],
  "quietHours": {
    "enabled": false,
    "start": "22:00",
    "end": "07:00",
    "timezone": "UTC",
    "allowCritical": true
  },
  "alertTypes": {
    "MigrationStarted": {
      "enabled": true,
      "severity": "Info",
      "channels": ["console", "slack"]
    },
    "MigrationComplete": {
      "enabled": true,
      "severity": "Info",
      "channels": ["console", "slack", "email"]
    },
    "MigrationFailed": {
      "enabled": true,
      "severity": "High",
      "channels": ["console", "slack", "teams", "email"]
    },
    "MigrationProgress": {
      "enabled": true,
      "severity": "Info",
      "channels": ["console"],
      "progressMilestones": [25, 50, 75, 90]
    },
    "HealthCheckFailed": {
      "enabled": true,
      "severity": "High",
      "channels": ["console", "slack", "teams"]
    },
    "RateLimitWarning": {
      "enabled": true,
      "severity": "Medium",
      "channels": ["console", "slack"]
    },
    "MigrationStalled": {
      "enabled": true,
      "severity": "High",
      "channels": ["console", "slack", "teams", "email"]
    }
  },
  "escalation": {
    "enabled": false,
    "levels": [
      {
        "afterMinutes": 0,
        "severity": "Medium",
        "channels": ["console", "slack"]
      },
      {
        "afterMinutes": 30,
        "severity": "High",
        "channels": ["console", "slack", "teams"]
      },
      {
        "afterMinutes": 60,
        "severity": "Critical",
        "channels": ["console", "slack", "teams", "email"]
      }
    ]
  },
  "templates": {
    "email": {
      "subjectPrefix": "[Migration Alert]",
      "footer": "This alert was generated by the Azure DevOps to GitHub Migration System."
    },
    "slack": {
      "showTimestamp": true,
      "showOrganization": true,
      "showActionButtons": true
    }
  },
  "logging": {
    "logAllAlerts": true,
    "logFile": "./logs/alerts.log",
    "includeStackTrace": false
  }
}
